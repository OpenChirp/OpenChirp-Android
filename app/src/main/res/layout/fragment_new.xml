<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.android.openchirp.Fragments.UserDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dev_eui_view"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="DEVEUI "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_id_view"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/app_eui_view"
            android:layout_toLeftOf="@+id/app_id"
            android:layout_toStartOf="@+id/app_id"
            android:gravity="center"
            android:text="APPID"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_eui_view"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/dev_eui_view"
            android:gravity="center"
            android:text="APPEUI"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dev_eui"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="NULL"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_above="@+id/app_eui"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/dev_eui_view"
            android:layout_toEndOf="@+id/dev_eui_view" />

        <TextView
            android:id="@+id/app_eui"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_above="@+id/app_id"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/app_eui_view"
            android:layout_toRightOf="@+id/app_eui_view"
            android:gravity="center"
            android:text="NULL"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/app_id"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/app_eui_view"
            android:layout_toRightOf="@+id/app_eui_view"
            android:gravity="center"
            android:text="NULL "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/nil"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

</FrameLayout>
