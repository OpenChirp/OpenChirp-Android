<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.android.openchirp.Fragments.UserDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/device_view"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Devices " />

        <TextView
            android:id="@+id/device_name_1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/device_view"
            android:gravity="center"
            android:text="Coffee" />

        <TextView
            android:id="@+id/device_type"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_above="@+id/device_type_1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/device_view"
            android:gravity="center"
            android:text="Type" />

        <TextView
            android:id="@+id/device_type_1"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/device_name_1"
            android:layout_below="@+id/device_view"
            android:layout_toEndOf="@+id/device_view"
            android:layout_toRightOf="@+id/device_view"
            android:gravity="center"
            android:text="NONE" />

        <TextView
            android:id="@+id/nil"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</FrameLayout>
